 <section id="blog" class="blog-preview">
    <h1>Latest Updates</h1>

{% set blogList = collections.blog | reverse %}
{% if blogList.length > 0 %}
  {% set latestBlog = blogList[0] %}
{% endif %}


  {% if latestBlog %}
  <article class="blog-entry">
    <div class="blog-tag tag-{{latestBlog.data.tagType}}">
      {{ latestBlog.data.tagInitial if latestBlog.data.tagInitial else 'B' }}
    </div>
    <div class="blog-body">
      <div class="blog-top">
        <a href="{{ latestBlog.url }}" class="blog-title">{{ latestBlog.data.title }}</a>
        {% if latestBlog.data.readTime %}
          <span class="blog-time">⏱ {{ latestBlog.data.readTime }} min</span>
        {% endif %}
      </div>
      <div class="blog-bottom">
        <p class="blog-snippet">{{ latestBlog.data.description }}</p>
        <span class="blog-date">📅 {{ latestBlog.date | readableDate }}</span>
      </div>
    </div>
  </article>
{% else %}
  <p>No blog post available.</p>
{% endif %}

      
